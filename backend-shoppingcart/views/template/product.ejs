<% layout('../layout') %>
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Product</h1>
                <!--<a href="/addproduct">-->
                    <!--<button type="button" class="btn btn-success pull-right"><i class="fa fa-plus" aria-hidden="true"></i></button>-->
                <!--</a>-->
            <form action="/product/<%= products.id %>/<%= products.title %>" method="post" id="products-form">
            <div align="left">
                <input type="hidden" id="product1" required name="product1"   value="<%= ids %>"/></input>

                <h3 id="title" required name="title" >ชื่อสินค้า <%= title %>
                <a href="/addproduct" class="btn btn-success " role="button"><i class="fa fa-plus" aria-hidden="true"></i></a>
                    <button type="submit" class="btn btn-danger"><i class="fa fa-times" aria-hidden="true"></i></button>
            </div>
            <br/>

        </div>
        <!-- /.col-lg-12 -->

    </div>
    <div>
        <table class="table table-responsive">
            <thead>
            <tr>
                <th>Products</th>
                <th>Description</th>
                <th>Price</th>
                <th>ImagePath</th>
            </tr>
            </thead>
            <tbody>
            <% products.forEach(function(products) { %>
            <tr>
                <td><%= products.title %></td>
                <td><%= products.description %></td>
                <td><%= products.price %></td>
                <td><%= products.imagePath %></td>
                <td>
                    <!--<button type="submit" class="btn btn-success">Update</button></td>-->
                    <a href="/product/<%= products._id %>/<%= products.title %>" type="submit" class="btn btn-success">Select</a>
                </td>
            </tr>

            <% }); %>
            </tbody>
        </table>
    </form>
    </div>
</div>
<!-- /#page-wrapper -->