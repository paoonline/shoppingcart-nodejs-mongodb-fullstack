<% layout('../layout') %>
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Add Product</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>


    <br>
    <div class="row">
        <div class="col-lg-12">
            <form action="/addproduct" method="post" id="addproduct-form">
            <div class="form-group">
                <label for="title">Product_Name</label>
                <input type="text" id="title" class="form-control" required name="title"/>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input type="text" id="description" class="form-control" required name="descriptiont"/>
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input type="text" id="price" class="form-control" required name="price"/>
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input type="file" id="imagePath" class=""  accept="image/png, image/jpeg, image/gif" required name="imagePath"/>
            </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success  ">Add Product</button>
                </div>
            </form>
    </div>
</div>
<!-- /#page-wrapper -->