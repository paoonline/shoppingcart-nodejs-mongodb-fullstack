<% layout('../layout') %>
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Products</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>

        <!-- <label>Search</label> -->
        <!-- <input class="form-control"> -->
        <!-- <a href="/addproduct" class="btn btn-success " role="button"><i class="fa fa-plus" aria-hidden="true"></i></a> -->

        <div>
            <table class="table table-responsive">
                <thead>
                    <tr>
                        <th>Products</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>ImagePath</th>

                    </tr>
                </thead>
                <tbody>
                    <% products.forEach(function(products) { %>
                        <tr>
                            <td>
                                <%= products.title %>
                            </td>
                            <td>
                                <%= products.description %>
                            </td>
                            <td>
                                <%= products.price %>
                            </td>
                            <td>
                                <%= products.imagePath %>
                            </td>
                            <td>
                                <!--<button type="submit" class="btn btn-success">Update</button></td>-->
                                <a href="/product/<%= products._id %>/<%= products.title %>" type="submit" class="btn btn-success">Select</a>
                                <a href="/editproduct/<%= products._id %>" class="btn btn-info " role="button">
                                    <i class="fa fa-pencil" aria-hidden="true"></i>
                                </a>
                            </td>
                        </tr>

                        <% }); %>
                </tbody>
            </table>

        </div>
    </div>
    <!-- /#page-wrapper -->