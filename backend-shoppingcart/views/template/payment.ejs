<% layout('../layout') %>
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Payment</h1>
        <!-- /.col-lg-12 -->

    <form action="/payment/<%= payment.orderob %>/<%= payment.orderids %>" method="post" id="payment-form">
        <div align="left">
        <h3 id="order1" required name="order1" >เลขท่ี่สั่งซื้อ <%= order1 %></h3>
        <input type="hidden" id="payment1" required name="payment1"   value="<%= payment1%>"/>

        <button type="submit" class="btn btn-success">Update</button>
        </div>
    </div>
    </div>
    <div>
            <table class="table table-responsive">
                <thead>
                <tr>
                    <th>Payment_id</th>
                    <th>PricePayment</th>
                    <th>bank</th>
                    <th>Time</th>
                    <th></th>

                </tr>
                </thead>
                <tbody>

                <% payment.forEach(function(payment) { %>

                <tr>
                    <td required name="orderid" id="orderid"><%= payment.orderids %></td>
                    <td><%= payment.pricepayment %></td>
                    <td><%= payment.bank %></td>
                    <td><%= payment.timepayment %></td>
                    <td>
                        <!--<button type="submit" class="btn btn-success">Update</button></td>-->
                    <a href="/payment/<%= payment.orderob %>/<%= payment.orderids %>" type="submit" class="btn btn-success">Select</a>
                    </td>
                </tr>

                    <% }); %>
                </tbody>
            </table>
    </form>
</div>
</div>
<!-- /#page-wrapper -->