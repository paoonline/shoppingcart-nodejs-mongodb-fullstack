<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success {{#if noMessages}}hidden{{/if}}">
            {{ successMsg }}
        </div>
    </div>
</div>
<div class="row">
<div class="col-md-8 col-md-offset-2">
    {{# emails }}
    <h1>ข้อมูลผู้ใช้งาน</h1>
    <h3>{{this.email}}</h3>
    {{/emails}}
    <hr>
    <div class="row">
        <div class="col-xs-6 ">
            <h1>รายการสั่งซื้อของฉัน</h1>
        </div>
        <div class="col-xs-6 " align="right">

        </div>
    </div>

    {{# each orders }}
     <form action="/profile" method="post" id="profile-form">
    <p><strong>เลขที่สั่งซื้อ </strong>{{ this.orderid }}</p>
    <div class="panel panel-default">
        <div class="panel-body">
            <ul class="list-group">
                {{# each this.items }}
                <li class="list-group-item">
                    <span class="badge">{{ this.price }}</span>
                    {{ this.item.title }} | {{ this.qty }} ชิ้น
                </li>
                {{/each}}
            </ul>
            <p><strong>เวลาการสั่งซื้อ </strong>{{ this.time }}</p>
            <h1><a href="/payment/{{this._id}}/{{this.orderid}}" type="button" class="btn btn-success pull-left">แจ้งยืนยันการโอนเงิน</a></h1>
               <button type="submit" class="btn btn-danger pull-right"><i class="fa fa-times" aria-hidden="true"></i></button>
        </div>
        <div class="panel-footer">
            <div class="row">
                <div class="col-md-6">
                    <strong>ราคารวม: {{ this.totalPrices }} บาท</strong>
                </div>

                <div class="col-md-6" align="right">
                    <strong>สถานะ: {{ this.status }} </strong>
                    <input type="hidden" id="profile1" required name="profile1"   value="{{this.id}}"/></input>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</form>
</div>

</div>