{{#if products }}
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <h1> <i class="fa fa-shopping-cart" aria-hidden="true"></i> ตระกร้าสินค้าของฉัน</h1>
        <br/>
        <ul class="list-group">
            {{#each products}}
              <li class="list-group-item">
                <span class="badge">{{ this.qty }}</span>
                <strong>{{ this.item.title }}</strong>
                <span class="label label-success">{{ this.price }} บาท</span>
                <div class="btn-group">
                    <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">
                        แก้ไข <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a href="/reduce/{{this.item._id}}">ลบสินค้าทีละ 1 ชิ้น</a></li>
                        <li><a href="/remove/{{this.item._id}}">ลบสินค้าทั้งหมด</a></li>
                    </ul>
                </div>
               </li>
            {{/each}}
        </ul>
    </div>
</div>

<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <strong>ราคายังไม่รวมค่าจัดส่ง: {{ totalPrice }} บาท</strong>
    </div>
</div>
<hr/>

<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <a href="/checkout" type="button" class="btn btn-success  btna">สั่งซื้อเดี๋ยวนี้</a>
    </div>
</div>
{{ else }}
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <h2>ไม่มีสินค้าในตระกร้า</h2>
    </div>
</div>
{{/if}}











